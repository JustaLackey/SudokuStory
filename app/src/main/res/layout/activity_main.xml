<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#111111"
    tools:context="com.jhchang.simplesudoku.MainActivity">

    <Button
        android:id="@+id/buttonPlay"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:letterSpacing="0.2"
        android:text="PLAY"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        tools:text="STORY" />

    <Button
        android:id="@+id/buttonInfinite"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:letterSpacing="0.2"
        android:text="INFINITE"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Button"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        tools:text="INFINITE" />

    <Button
        android:id="@+id/buttonOptions"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonInfinite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:letterSpacing="0.2"
        android:text="Options"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Button"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        tools:text="Options" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:adjustViewBounds="true"
        android:src="@drawable/sudoku_word_title" />


</RelativeLayout>